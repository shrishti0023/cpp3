#include <iostream>
using namespace std;

int main() {
    int num;
    int binary[32], i = 0;

    cout << "Enter decimal number: ";
    cin >> num;

    while(num > 0) {
        binary[i] = num % 2;
        num /= 2;
        i++;
    }

    cout << "Binary = ";
    for(int j = i - 1; j >= 0; j--) {
        cout << binary[j];
    }

    return 0;
}
