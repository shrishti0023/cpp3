#include <iostream>
using namespace std;

int main() {
    string password = "admin";
    string input;
    int attempts = 0;

    while(attempts < 3) {
        cout << "Enter password: ";
        cin >> input;

        if(input == password) {
            cout << "Login Successful";
            break;
        }
        else {
            cout << "Wrong password\n";
            attempts++;
        }
    }

    if(attempts == 3)
        cout << "Account locked";

    return 0;
}
