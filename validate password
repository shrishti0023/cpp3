#include <iostream>
using namespace std;

int main() {
    string password;
    bool valid = false;

    while(!valid) {

        cout << "Enter password: ";
        cin >> password;

        if(password.length() < 6) {
            cout << "Password must be at least 6 characters long.\n";
            continue;
        }

        bool hasUpper = false;
        bool hasDigit = false;

        for(int i = 0; i < password.length(); i++) {

            if(password[i] >= 'A' && password[i] <= 'Z')
                hasUpper = true;

            if(password[i] >= '0' && password[i] <= '9')
                hasDigit = true;
        }

        if(hasUpper && hasDigit) {
            valid = true;
            cout << "Password is valid.\n";
        } else {
            cout << "Password must contain at least one uppercase letter and one digit.\n";
        }
    }

    return 0;
}
